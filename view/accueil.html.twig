<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main>
      <!-- Carousel Start -->
      <div class="container-fluid p-0">
        <div id="headerCarousel" class="carousel slide" data-bs-ride="carousel">

         
          <div class="carousel-inner">
            {# Caroussel pour affichage des véhicules #}
            {% for item in movies.getAll()  %}
            {% set current_movie = item %}

            <div class="carousel-item {{loop.first ? 'active' : ''}}">
              <div class="container">
                <div class="row align-items-center justify-content-center justify-content-lg-start">
                  <div class="col-10 col-lg-7 text-center text-lg-start">
                    <h1 class="text-black mb-3 animated slideInDown">{{loop.index}} - {{item.getTitle}}</h1>
                    <p>Réalisé en {{item.getYear}} par {{item.getDirector}}
                      
                      

                      {% for item in roles.getAll() %}
                      {% if item.getFk_movie() == current_movie.getId() %}
                      <br>
                      {{roles.getRoleMovie(item.getFk_movie()).getCharacter()}}
                      <p>Id Role: {{item.getFk_movie()}} <br>
                        Id Movie: {{current_movie.getId()}}
                      </p>


                      {% endif %}

                      {% endfor %}

                      
                      
                      
                    </p>

                  </div>



                  {# <div class="col-lg-5 d-none d-lg-flex animated zoomIn">
                    <img class="img-fluid" src="./view/img/{{item.getImage}}" alt="{{item.getMarque}} {{item.getModele}}">
                  </div> #}
                </div>
                  
                  
              </div>
            </div>
            {% endfor %}
          </div>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
